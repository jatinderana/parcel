<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="240dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/tv_title2"
        android:background="#cc000000"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/image"
            android:layout_margin="15dp"
            android:layout_toRightOf="@+id/img_cross"

            android:src="@drawable/ic_local_drink_black_24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Pepsi"
            android:fontFamily="@font/chauregular"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/tv_date"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:background="#939393"
            android:layout_height="0.2dp"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_below="@+id/tv_title2"
        android:background="#cc000000"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/images"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_local_drink_black_24dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Coca-Cola"
            android:fontFamily="@font/chauregular"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/images"
            android:textSize="25dp"
            android:textColor="@color/white"
            />
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:background="#939393"
            android:layout_height="0.2dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/tv_titl"
        android:layout_below="@+id/tv_title"
        android:background="#cc000000"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/imag"
            android:layout_margin="15dp"
            android:layout_toRightOf="@+id/img_cross"

            android:src="@drawable/ic_local_drink_black_24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Champagne Cola"
            android:fontFamily="@font/chauregular"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imag"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/tv_dat"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:background="#939393"
            android:layout_height="0.2dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/tv_tit"
        android:layout_below="@+id/tv_titl"
        android:background="#cc000000"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/ima"
            android:layout_margin="15dp"
            android:layout_toRightOf="@+id/img_cross"

            android:src="@drawable/ic_local_drink_black_24dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:text="Mountain Dew"
            android:fontFamily="@font/chauregular"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/ima"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:id="@+id/tv_da"/>
        <View
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_alignParentBottom="true"
            android:background="#939393"
            android:layout_height="0.2dp"/>

    </RelativeLayout>


</RelativeLayout>