<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/_10dp">

    <TextView
        android:id="@+id/dialogTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/are_you_sure"
        android:textSize="16sp"
        android:fontFamily="@font/ptsansregular"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_12dp"
        android:fontFamily="@font/ptsansregular"
        android:textSize="16sp"
        android:layout_below="@+id/dialogTV"
        android:text="You want to freeze this day?"
        android:textColor="@color/black" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:id="@+id/cbLL"
        android:visibility="gone"
        android:layout_below="@+id/titleTV"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/termCB"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:fontFamily="@font/ptsansregular"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/i_agree_to_the_parcel_oman_terms_conditions"
            android:textColor="@color/black"
            android:id="@+id/agreeTV"
            android:textSize="12sp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbLL"
        android:layout_marginTop="@dimen/_10dp">

        <TextView
            android:id="@+id/nextBT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_8dp"
            android:background="@drawable/buttonbackground"
            android:fontFamily="@font/chauregular"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/_8dp"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/_8dp"
            android:text="Ok"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/closeBT"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_12dp"
            android:layout_toStartOf="@+id/nextBT"
            android:background="@drawable/buttonbackground_gray"
            android:fontFamily="@font/chauregular"
            android:paddingStart="20dp"
            android:paddingTop="@dimen/_8dp"
            android:paddingEnd="20dp"
            android:paddingBottom="@dimen/_8dp"
            android:text="@string/cancel"
            android:textColor="@color/black" />
    </RelativeLayout>
</RelativeLayout>
