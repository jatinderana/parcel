                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="15sp"
                                    android:layout_weight="1"
                                    android:textColor="@color/colorPrimary"
                                    android:text="View Menu"/>


                            </LinearLayout>

