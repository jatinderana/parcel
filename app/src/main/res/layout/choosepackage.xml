<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="10dp"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Buy it Now"
                android:visibility="gone"
                android:textSize="18dp"

                android:layout_gravity="center_horizontal"
                />
            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                />
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="19sp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/chauregular"
                android:text="@string/upgrade_package_dialog"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"

                android:orientation="horizontal">
                <CheckBox
                    android:id="@+id/checkemail"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/emails"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/ptsansregular"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:text="@string/select_package_upgrade"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:visibility="visible">


                </TextView>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/spine"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttonnext"
            android:fontFamily="@font/ptsansregular"
            android:gravity="center"
            android:text="@string/select_package_upgrade"
            android:textColor="@color/black"
            android:textSize="16sp"/>


        <TextView
            android:layout_width="match_parent"
            android:gravity="center"
            android:textColor="@color/black"
            android:text=""
            android:visibility="gone"
            android:id="@+id/priceTV"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/spin"
            android:visibility="gone"
            android:gravity="center"
            android:text="Choose Type"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:background="@drawable/buttonnext"
            android:layout_marginTop="20dp"
            android:layout_height="40dp">

        </TextView>

        <View
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="5dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:padding="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:visibility="gone"
                android:text="Delivery Preference:"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radiobreakfast"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:fontFamily="@font/ptsansregular"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/black"
                    android:text="Breakfast" />


                <RadioButton
                    android:id="@+id/radiolunch"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/ptsansregular"
                    android:buttonTint="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textColor="@color/black"
                    android:text="Lunch" />

                <RadioButton
                    android:id="@+id/radioboth"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/ptsansregular"
                    android:buttonTint="@color/colorPrimary"
                    android:textColor="@color/black"
                    android:text="Both" />

            </RadioGroup>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="right"
        android:id="@+id/upgradeLL"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        android:layout_below="@+id/linearLayout5"
        android:orientation="horizontal">

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            />

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/buttonbackgroundcancel"
            android:textColor="@color/black"
            android:text="@string/close_string" />
        <View
            android:layout_width="5dp"
            android:layout_height="50dp"
            />

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/backgroundbutton"
            android:textColor="#fff"
            android:text="@string/upgrade_string"
            />


    </LinearLayout>


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:visibility="gone"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"

        android:contentDescription="@null" />



    <ImageView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:visibility="gone"

        android:contentDescription="@null" />

    <com.aigestudio.wheelpicker.WheelPicker
        android:id="@+id/packageWP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@color/wheel_background"
        android:visibility="gone"
        android:layout_below="@+id/upgradeLL"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="true"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="#585555"
        aigestudio:wheel_item_text_size="18sp"
        aigestudio:wheel_selected_item_text_color="#444242" />

</RelativeLayout>
