<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_8dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:fontFamily="@font/chauregular"
            android:gravity="center"
            android:id="@+id/titleTV"
            android:text="@string/my_account"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty" />

    </RelativeLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:id="@+id/mainLL"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/animleft"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/img_cross"
                android:src="@drawable/ic_person_white" />


            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/image"
                android:fontFamily="@font/chauregular"
                android:gravity="left|center_vertical"
                android:text="@string/my_profile_string"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:background="#939393" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/subcribe"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:background="@drawable/animleft"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/images"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_subs_white" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/subsTV"
                android:layout_toRightOf="@+id/images"
                android:fontFamily="@font/chauregular"
                android:gravity="left|center_vertical"
                android:text="@string/my_subscriptions_string"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:background="@drawable/animleft"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/images2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_menu_black_24dp" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/subHistory"
                android:layout_toRightOf="@+id/images"
                android:fontFamily="@font/chauregular"
                android:gravity="left|center_vertical"
                android:text="@string/subscription_history_string"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tv_title3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:background="@drawable/animleft"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/images1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_parcel_box" />


            <TextView
                android:id="@+id/parcelBoxTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/images"
                android:fontFamily="@font/chauregular"
                android:gravity="left|center_vertical"
                android:singleLine="true"
                android:text="@string/parcel_gathering_box_history"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logouts"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="10dp"
            android:background="@drawable/animleft"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/images3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:src="@drawable/history" />


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/images"
                android:fontFamily="@font/chauregular"
                android:gravity="left|center_vertical"
                android:text="@string/logout_string"
                android:id="@+id/logoutTV"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>